<h2>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-group">
    <%= f.label t(:user_login) %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>

  <div class="field input-group">
    <%= f.label t(:password) %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field input-group check-box-sessions">
      <span class="input-group-addon">
        <%= f.check_box :remember_me%>
      </span>
        <%= f.label t(:remember_me), class: "form-control text-center" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t(:login), class: "btn btn-primary" %>
  </div>
<% end %>
