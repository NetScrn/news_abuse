<h2><%= t(:admin_section) %></h2>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Recent Users</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
          <li><%= user.username %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Recent Articles</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @articles.each do |article| %>
            <li>
              <div class="arty">
                <h4><%= article.title %></h4>
                <small id="desc"><%= article.description %></small>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Admin links</h3>
      </div>
      <div class="panel-body">
        <nav>
          <ul>
            <li>Users</li>
            <li>Categories</li>
            <li>Articles</li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
