<div class="category-tags">
  <% @article.categories.each do |category| %>
    <span class="category-tag label label-primary"><%= category.name %></span>
  <% end %>
</div>

<h2 class="article-title"><%= @article.title %></h2>


<div class="main-article row">
  <article class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
    <%= raw(@article.body) %>
  </article>

  <aside class="col-md-3 col-lg-3 visible-md visible-lg">
    <div class="panel panel-info">
      <div class="panel-heading"> <h3 class="panel-title">Другие статьи этого автора</h3></div>
      <div class="panel-body">
        <ul>
          <li>Мамаша застрелила сына</li>
          <li>Дед лтит на маркс</li>
        </ul>
      </div>
    </div>
  </aside>
</div>
