<%= link_to article, class: "article-link col-xs-12 col-sm-12 col-md-12" do %>
  <article>
    <h3><%= article.title %></h3>
    <small>
      <%= article.description %>
    </small>
    <div class="created-at"><%="#{t(:published)}: #{(article.created_at.strftime("%d-%m-%Y %H-%M"))}" %></div>
  </article>
<% end %>
